<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/addblip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Create"
        android:layout_below="@+id/detailsEt"
        android:layout_toStartOf="@+id/detailsEt" />

    <Button
        android:id="@+id/cancelblip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_alignBaseline="@+id/addblip_button"
        android:layout_alignBottom="@+id/addblip_button"
        android:layout_alignEnd="@+id/detailsEt"
        android:layout_marginEnd="36dp" />

    <TextView
        android:id="@+id/blipdetailstextview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="Add Blip Details"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/detailsEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_alignTop="@+id/detailsText"
        android:layout_alignStart="@+id/blipnameEt" />

    <TextView
        android:id="@+id/blipnameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/blipdetailstextview"
        android:layout_marginStart="32dp"
        android:layout_marginTop="27dp"
        android:text="Blip Name:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/blipnameEt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/blipnameText"
        android:layout_alignBottom="@+id/blipnameText"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/blipnameText"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/detailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/blipnameText"
        android:layout_below="@+id/blipnameEt"
        android:layout_marginTop="21dp"
        android:text="Details:"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>